<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background3"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="17dp">

        <TextView
            android:id="@+id/myTextView42311"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOB403"
            android:textColor="@color/title3"
            android:textSize="10dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/myTextView54321"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lập trình Mobile đa..."
            android:textColor="@color/title3"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2143adsfs2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_map"

                android:tint="@color/black" />

            <TextView
                android:id="@+id/myTextView7254"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng T308 (Nhà T)"
                android:textColor="@color/title3"

                android:textSize="10dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4323"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_clock"
                android:tint="@color/black" />

            <TextView
                android:id="@+id/myTextView46543"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ca 6 · 19:30 - 21:30"
                android:textColor="@color/title3"

                android:textSize="10dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>