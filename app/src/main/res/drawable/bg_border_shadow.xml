<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drawable cho border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" />
            <stroke
                android:width="2dp"
            android:color="@color/gray" />
        </shape>
    </item>
    <!-- Drawable cho đổ bóng -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Màu của đổ bóng -->
            <corners android:radius="8dp" /> <!-- Độ cong của góc đổ bóng -->
        </shape>
    </item>
</layer-list>
